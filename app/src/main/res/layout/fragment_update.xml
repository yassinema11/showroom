<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:text="Update Car"
        android:textStyle="bold"
        android:textSize="40sp"
        android:id="@id/txt"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp" />

    <EditText
        android:id="@+id/et_user_id"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_below="@+id/txt"
        android:layout_margin="10dp"
        android:gravity="center"
        android:hint="Car ID"
        android:inputType="number"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_updated_name"
        android:layout_width="250dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:layout_height="45dp"
        android:layout_below="@id/et_user_id"
        android:hint="Car Marque" />

    <EditText
        android:id="@+id/et_updated_username"
        android:layout_width="250dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:layout_height="45dp"
        android:layout_below="@id/et_updated_name"
        android:hint="Car Model" />

    <EditText
        android:id="@+id/et_updated_email"
        android:layout_width="250dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:layout_height="45dp"
        android:layout_below="@id/et_updated_username"
        android:hint="Car Prix"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/et_updated_password"
        android:layout_width="250dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:layout_height="45dp"
        android:layout_below="@id/et_updated_email"
        android:hint="Car Paiement"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnUpdateUser"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@id/et_updated_password"
        android:text="Update Car" />


</RelativeLayout>
